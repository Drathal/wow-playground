{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "sourceMap": true,
        "pretty": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "noEmitOnError": false
    },
    "compileOnSave": false,
    "typeRoots": ["./node_modules/@types/"],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!node_modules/**",
        "!webpack/**",
        "!test/**"
    ],
    "atom": {
        "formatOnSave": true
    }
}
